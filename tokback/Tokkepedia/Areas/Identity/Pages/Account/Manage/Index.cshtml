@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<!-- **** BACKGROUND !Important **** -->
<section class="tokkepedia-main clearfix">
    <div class="tokkepdia-sub">
    </div>
</section>
<!-- **** /BACKGROUND **** -->

<section class="special-area bg-white">
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-12 col-md header-spacing">
                <h2 class="text-white">Manage your account</h2>

                <div>
                    <h4 class="text-white">Change your account settings</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-3">
                            <partial name="_ManageNav" />
                        </div>
                        <div class="col-md-9">
                            <h4 class="text-white">@ViewData["Title"]</h4>
                            @await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
                            <div class="row">
                                <div class="col-md-6">
                                    <form id="profile-form" method="post">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Username" class="text-white"></label>
                                            <input asp-for="Username" class="form-control" disabled />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.Email" class="text-white"></label>
                                            @if (Model.IsEmailConfirmed)
                                            {
                                                <div class="input-group">
                                                    <input asp-for="Input.Email" class="form-control" />
                                                    <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                </div>
                                            }
                                            else
                                            {
                                                <input asp-for="Input.Email" class="form-control" />
                                                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link text-white">Send verification email</button>
                                            }
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.PhoneNumber" class="text-white"></label>
                                            <input asp-for="Input.PhoneNumber" class="form-control" />
                                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn btn-default">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
