@page
@model ExternalLoginModel
@using System.Globalization;
@using Tokkepedia.Models;
@inject SignInManager<TokketUser> SignInManager
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
@{
    List<string> countryList = new List<string>();
    List<SelectListItem> CountryList = new List<SelectListItem>();


    CultureInfo[] CInfoList = CultureInfo.GetCultures(CultureTypes.SpecificCultures);
    foreach (CultureInfo CInfo in CInfoList)
    {
        RegionInfo R = new RegionInfo(CInfo.LCID);
        if (!(countryList.Contains(R.EnglishName)))
        {
            countryList.Add(R.EnglishName);
        }
    }


    countryList = countryList.Distinct().ToList();
    countryList.Sort();
    foreach (string country in countryList)
    {
        CountryList.Add(new SelectListItem
        {
            Text = country,
            Value = country.ToLower(),
            Selected = false
        });
    }
}

<!-- **** BACKGROUND !Important **** -->
<section class="tokkepedia-main clearfix">
    <div class="tokkepdia-sub">
    </div>
</section>
<!-- **** /BACKGROUND **** -->

<section class="special-area bg-white">
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-12 col-md header-spacing">
                <br />
                <h2 class="text-white">@ViewData["Title"]</h2>
                <h4 class="text-white">Associate your @Model.LoginProvider account.</h4>
                <hr />

                <p class="text-white">
                    You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
                    Please fill out the account details and click the Register button to finish
                    logging in.
                </p>

                <div class="row">
                    <div class="col-md-4">
                        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <input type="hidden" asp-for="Input.FirebaseToken" />
                            <input type="hidden" asp-for="Input.Id" />
                            <input type="hidden" asp-for="Input.UserName" />
                            <input type="hidden" asp-for="Input.UserPhoto" />

                            <div class="form-group">
                                <label asp-for="Input.DisplayName" class="text-white"></label>
                                <input asp-for="Input.DisplayName" class="form-control" />
                                <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.Birthday" class="text-white"></label><br />
                                <input asp-for="Input.Birthday" type="date" class="form-control">
                                <span asp-validation-for="Input.Birthday" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.Country" class="text-white"></label>
                                @Html.DropDownListFor(model => model.Input.Country, CountryList, "Select a Country:", new { @class = "form-control" })
                                <span asp-validation-for="Input.Country" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.Email" class="text-white"></label>
                                <input asp-for="Input.Email" class="form-control" readonly />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password" class="text-white"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword" class="text-white"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="Input.TermAccepted" type="checkbox" id="terms" /> <label for="terms">I agree to the <a asp-controller="Home" asp-action="Terms">Terms of Service.</a></label>
                            </div>
                            <button type="submit" class="btn btn-default">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

