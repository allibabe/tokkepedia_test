@{ 
    var activeTab = 1;
    if (ViewBag.ActiveTab != null)
    {
        int.TryParse(ViewBag.ActiveTab.ToString(), out activeTab);
    }
}

<nav class="nav-sidebar">
    <ul class="nav tabs navbar-nav">
        <li class="nav-item @string.Format("{0}", activeTab == 1 ? "active" : "")"><a href="#tab1" data-toggle="tab">Profile</a></li>
        <li class="nav-item @string.Format("{0}", activeTab == 2 ? "active" : "")"><a href="#tab2" data-toggle="tab">Password</a></li>
        <li class="nav-item @string.Format("{0}", activeTab == 3 ? "active" : "")"><a href="#tab3" data-toggle="tab">Personal Data</a></li>
    </ul>
</nav>

