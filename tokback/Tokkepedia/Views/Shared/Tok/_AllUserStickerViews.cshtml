@model List<PurchasedSticker>

@if (Model.Count > 0)
{
    @foreach (Sticker sticker in Model)
    {
        <div class="col" style="margin-right: 2px;">
            <div class="container sticker @(!string.IsNullOrEmpty(ViewBag.SelectedStickerId) ? (ViewBag.SelectedStickerId == sticker.Id ? "selected" : "") : "")" data-stickerid="@sticker.Id" data-stickerImage="@sticker.Image" data-stickername="@sticker.Name" style="border: 1px solid #D5DBDB;padding:16px 2px; border-radius: 4px;">
                <div class="row no-gutters">
                    <div class="col-md-12 text-center">
                        <img src="@sticker.Image" style="height: 48px;" />
                    </div>
                </div>
            </div>
        </div>
    }
}

<script>
    $(document).ready(function () {
        $(".sticker").click(function () {
            $("#btnSelect").attr("data-stickerid", $(this).attr("data-stickerid"));
            $("#btnSelect").attr("data-stickerurl", $(this).attr("data-stickerImage"));
            $(".txtSelectedStickerName").html($(this).attr("data-stickername"));
            $("#btnSelect").attr("disabled", false);
            $(".sticker").removeClass("selected");
            $(this).addClass("selected");
        });
    });
</script>