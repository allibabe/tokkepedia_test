
@{
    ViewData["Title"] = "Tok Blitz";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css?family=Anton" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <link href="~/css/tok.css" rel="stylesheet" />
    <link href="~/css/tokblitz.css" rel="stylesheet" />
    <link href="~/css/tokclass.css" rel="stylesheet" />
}

<!-- **** BACKGROUND !Important **** -->
<section class="tokkepedia-main clearfix">
    <div class="tokblitz-bg">
    </div>
</section>
<!-- **** /BACKGROUND **** -->

<section class="special-area bg-white">
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-12 col-md">
                <div class="col-12 col-md header-spacing" id="pageContainer" style="padding-left: 0px; padding-right: 0px;">
                    <div class="col-md-6" style="margin: 0px auto;">
                        <div class="row">
                            <div class="col-md-12">
                                <!--------------- start of images/tokblitz and button in home/ starting page----------------------------------->
                                <img src="../images/tokblitz/logo_tokblitz.png" class="tokblitz-logo" />
                                <img id="award" class="imgRotate w3-circle tokblitz-award" src="../images/tokblitz/award.png" onMouseOver="this.style.transform = 'scale(1.1, 1.2)';" onmouseout="this.style.transform = 'scale(1,1)'" />
                            </div>
                        </div>
                        <div class="row" style="margin-top: 16px;">
                            <div class="col-md-8" style="margin: 0px auto;">
                                @*<button id="btnPlay" class="buttonMain tokblitz-menu" onclick="this.style.transform = 'scale(.8, .8)'" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'">PLAY</button>
                                <button id="btnSettings" class="buttonMain tokblitz-menu" onclick="this.style.transform = 'scale(.8, .8)'" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'">SETTINGS</button>*@
                                <div class="">
                                    <img id="btneasy" src="../images/tokblitz/easy.png" class="buttonMain" onclick="this.style.transform = 'scale(.8, .8)'" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                    <img id="btnmoderate" src="../images/tokblitz/moderate.png" class="buttonMain" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                    <img id="btnchallenging" src="../images/tokblitz/challenging.png" class="buttonMain" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                    <img id="btndifficult" src="../images/tokblitz/difficult.png" class="buttonMain" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!------------------stars images/tokblitz that sparkles------------------------------------------------->
                    <img id="star1" src="../images/tokblitz/stargif.gif" style="width:5%;height:5%;position:absolute;left:5px;display:none;" />
                    <img id="star2" src="../images/tokblitz/stargif.gif" style="width:5%;height:5%;position:absolute;left:75px;top:40%;display:none;" />
                    <img id="star5" src="../images/tokblitz/stargif.gif" style="width:5%;height:5%;position:absolute;left:200px;top:30%;display:none;" />


                    <!--modal pop-up for gametype------------------------------>
                    <div id="gametypeMOdal" class="w3-modal w3-animate-zoom" style="height:100%;padding-top:1%;">
                        <div class="w3-modal-content" style="border:solid 4px #2E4053;height:95%;border-radius:15px;background-image:url('../images/tokblitz/bg1.png');">
                            <div class="w3-container" style="padding:0px;width:100%;">
                                <img src="~/images/tokblitz/topblank.png" style="width:100%;height:15%;" />
                                <img src="~/images/tokblitz/home.png" onclick="document.getElementById('gametypeMOdal').style.display='none';this.style.transform = 'scale(.8, .8)'" style="cursor: pointer;position:absolute;z-index:2;top:2px;right:2px;width:10%;height:10%;" />
                                <img src="~/images/tokblitz/return.png" onclick="document.getElementById('gametypeMOdal').style.display='none'" style="cursor: pointer;position:absolute;z-index:2;top:2px;left:2px;width:10%;height:10%;" />
                                <img src="~/images/tokblitz/type.png" style="position:absolute;z-index:2;top:2px;left:20%;width:60%;" />
                                <img id="quotesId" src="~/images/tokblitz/q.png" style="position:absolute;z-index:2;top:25%;left:20%;width:60%;height:10%;cursor:pointer;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)';" onmouseout="this.style.transform = 'scale(1,1)'" />
                                <img id="sayingsId" src="~/images/tokblitz/s.png" style="position:absolute;z-index:2;top:37%;left:20%;width:60%;height:10%;cursor:pointer;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                <img src="~/images/tokblitz/category.png" style="position:absolute;z-index:2;top:49%;left:20%;width:60%;height:10%;cursor:pointer;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                <img src="~/images/tokblitz/2PLY.png" style="position:absolute;z-index:2;top:61%;left:20%;width:60%;height:10%;cursor:pointer;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                <img src="~/images/tokblitz/UG.png" style="position:absolute;z-index:2;top:73%;left:20%;width:60%;height:10%;cursor:pointer;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                <img src="~/images/tokblitz/SG.png" onclick="outTime()" style="position:absolute;z-index:2;top:85%;left:20%;width:60%;height:10%;cursor:pointer;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                            </div>
                        </div>
                    </div>
                    <!---modal popUp for gameplay-->
                    <div id="gameplayMOdal" class="w3-modal w3-animate-zoom" style="height:100%;padding-top:0;">
                        <div id="gamplay" class="w3-modal-content " style="overflow-y:hidden;overflow-x:hidden;border:solid 4px #2E4053;height:98%;background-image:url('../images/tokblitz/inGame.png');background-position:center;background-size: cover;">
                            <!-----image for thunder animation ------->
                            <img id="animateThunder" src="../images/Smash/09_Smash0001.png" style="width:80px;height:300px;display:none;position:absolute;z-index:5;overflow-y:hidden;">
                            <img src="../images/tokblitz/panel_topBlank.png" style="position:absolute;top:0;width:100%;height:100px;" />
                            <div id="categoryIDtext" style="color:white;position:absolute;top:1%;left:30%;width:40%;text-align:center;font-size:20px;font-family:Proxima Nova Cn Th">
                            </div>
                            <div id="secondFieldIDtext" style="color:white;position:absolute;top:6%;left:31%;width:38%;text-align:center;font-size:12px;font-family:Face Off M54;overflow-y:hidden;">
                            </div>
                            <img src="../images/tokblitz/part1.png" class="part1Class" />
                            <img src="../images/tokblitz/part2.png" class="part2Class" />
                            <img src="../images/tokblitz/part2.png" class="part3ClassAgain" />
                            <p style="z-index:3;position:absolute;top:49px;left:6px;font-size:14px;color:red;">GUESS :  <span id="userGuess"></span></p>
                            <p style="z-index:3;position:absolute;top:68px;left:6px;font-size:14px;color:red;">ROUND :    <span id="userRound"></span></p>
                            <p id="userScore" style="z-index:3;position:absolute;top:30px;left:80px;font-size:14px;color:yellow;"></p>
                            <img id="clockId" src="../images/tokblitz/clock.png" class="Timer" id="Timer1" style="position:absolute;left:32%;bottom:0;width:16%;cursor:pointer;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                            <div id="timeId" class="Timer" style="color:red;font-size:25px;z-index:2;position:absolute;left:37%;bottom:3%;width:5%;cursor:pointer;" onMouseOver="this.style.transform ='scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'"></div>
                            <div class="w3-container" style="padding:0px;width:100%;">
                                <!------------------------thunder lightning------------------------------------->
                                <img id="thunderImageId" src="../images/tokblitz/lightning.gif" style="display:none;" />
                                <img id="thunderImageId2" src="../images/tokblitz/lightning.gif" style="display:none;position:absolute;right:5%;top:5%;" />
                                <!--------start of side buttons like home icon , thunder -------------------------->
                                <img id="homeId" src="../images/tokblitz/home.png" onclick="window.location.reload();" style="position:absolute;bottom:0%;width:12%;left:0%;cursor:pointer;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                <img id="thunderId" class="thunder" src="../images/tokblitz/smash.png" style="position:absolute;bottom:0%;width:16%;right:32%;cursor:pointer;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                <div id="thunderCount" class="thunderCount thunder "></div>
                                <img id="shopId" src="../images/tokblitz/inShop.png" style="position:absolute;bottom:0%;width:12%;right:0%;cursor:pointer;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                                <div id="questionid" class="questionidPos">
                                </div>

                                <!--------------start of container that will hold the answers for every button---------------------------------->
                                <div id="answerBoxMain" class="answerBoxPos">
                                </div>
                                <!---------------start of buttons and letters at the very bottom-------------------------------------------->
                                <div id="btnMain">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--------------- start of Pop up correct or wrong answer----------------------------------->
                    <div id="gameMOdalpopUp" class="w3-modal " style="height:100%;padding-top:10%;z-index:5;">
                        <div class="w3-modal-content" style="border:solid 4px #2E4053;height:60%;background-image:url('../images/tokblitz/bgagain.png');background-attachment:cover;background-position:center;">
                            <div class="w3-container" style="padding:0px;width:100%;">
                                <img src="../images/tokblitz/topblank.png" style="position:absolute;top:0;width:100%">
                                <div id="remarksId" style="position:absolute;z-index:2;top:60px;left:20%;width:60%;font-family: 'Lobster', cursive;color:red;font-size:40px;text-align:center;text-shadow:2px 2px 2px white "></div>
                                <div id="corrrectPopUpText" style="width:80%;left:10%;text-align:center;position:absolute;top:38%;font-family: 'Proxima Nova Cn Th';font-size:25px;display:none;">
                                </div>
                                <div id="wrongpopBox" class="grid-PopUp" style="width:70%;position:absolute;left:15%;top:35%;display:none;">
                                    <div class="grid-itemPopUp">Score</div>
                                    <div class="grid-itemPopUp">Round</div>
                                    <div class="grid-itemPopUp" style="font-size:12px;">Remaining Guess</div>
                                    <div id="scorepopid" class="grid-itemPopUp"></div>
                                    <div id="roundpopid" class="grid-itemPopUp"></div>
                                    <div id="guesspopid" class="grid-itemPopUp"></div>
                                </div>
                                <img id="continueId" src="../images/tokblitz/conti.png" style="position:absolute;z-index:2;bottom:4%;left:30%;width:40%;cursor:pointer;height:50px;" onMouseOver="this.style.transform = 'scale(1.1, 1.2)'" onmouseout="this.style.transform = 'scale(1,1)'" />
                            </div>
                        </div>
                    </div>
                    <!----------loader--->
                    <div id="gameMOdalpopUpLoader" class="w3-modal " style="height:100%;padding-top:10%;z-index:5;">
                        <div class="w3-modal-content" style="border:solid 4px #2E4053;height:60%;background-image: url('../images/tokblitz/bgagain.png');background-attachment:cover;background-position:center;">
                            <div class="w3-container" style="padding:0px;width:100%;">
                                <img src="../images/tokblitz/logo_tokblitz.png" class="mainLogo" />
                                <div id="loaderMessage" style="position:absolute;top:66%;left:15%;width:70%;color:white;text-align:center;">Loading Toks...</div>
                                <img id="loaderImage" src="../images/tokblitz/spinner.gif" style="position:absolute;top:30%;left:30%;width:40%;" />
                                <button id="btnTryAgain" class="btnModal" style="width:25%;height:10%;background-color:red;position:absolute;bottom:10px;right:25%;border-radius:10px;display:none;">Try Again</button>
                                <button id="btnCancel" class="btnModal" style="width:25%;height:10%;background-color:green;position:absolute;bottom:10px;left:25%;border-radius:10px;display:none;">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script src="~/js/tokblitz.js"></script>
}